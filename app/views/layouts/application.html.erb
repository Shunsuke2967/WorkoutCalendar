<!DOCTYPE html>
<html>
  <head>
    <title>WorkoutCalendar</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid container">
        <%= link_to 'WorkoutCalendar', calendars_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <% if current_user %>
              <li class="nav-item">
                <%= link_to 'HOME', calendars_path, class: 'nav-link link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'アカウント', user_path(current_user), class: 'nav-link link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログアウト', sessions_new_path, method: :delete, data: {confirm: 'ログアウトしますか？'}, class: 'nav-link link' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'サインアップ', new_user_path, class: 'nav-link link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログイン', sessions_new_path, class: 'nav-link link' %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <% if flash.notice.present? %>
        <div class="alert alert-success">
          <%= flash.notice %>
        </div>
      <% end %>
      <%= yield %>
    </div>
    <script src="/https:/getbootstrap.com/docs/5.0/assets/js/docs.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/docsearch.js@2/dist/cdn/docsearch.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
  </body>
</html>
